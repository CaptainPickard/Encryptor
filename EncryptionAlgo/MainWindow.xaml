<Window x:Class="EncryptionAlgo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encryptor" Height="350" Width="525" WindowStyle="SingleBorderWindow">
    <Grid Margin="0,0,0,0" RenderTransformOrigin="0.503,0.48">
        <TextBox Name="textboxMessage" 
                 Height="20" 
                 TextWrapping="Wrap" 
                 Width="258" 
                 Text="Enter text here, encrypy/decrpt" 
                 GotFocus="textbox1_GotFocus" 
                 VerticalAlignment="Bottom" 
                 HorizontalAlignment="Center" 
                 RenderTransformOrigin="0.493,-0.1" 
                 Margin="136,0,123,80" 
                 TextAlignment="Center"/>
        <Button Name="Encrypt" Content="Encrypt" Margin="150,163,265,116"  Click="Encrypt_Click" />
        <Button Name="Decrypt" Content="Decrypt" Margin="279,162,135,117"  Click="Decrypt_Click" RenderTransformOrigin="-0.457,1.763" />
        <Button Name="Copy" Content="Copy" Click="Copy_Click" Margin="403,32,36,254" />
        <Button Name="Paste" Content="Paste" Click="btnPaste_Click" Margin="177,255,264,30"  />
        <Button Name="Clear" Content="Clear" Click="Clear_Click" Margin="280,255,160,31" />
        <TextBox Name="output1" 
                 IsReadOnly="True" 
                 TextWrapping="Wrap"
                 Margin="148,30,132,176" />
    </Grid>
</Window>
